{
    "mime_type": "application/json/ons/eq",
    "language": "en",
    "schema_version": "0.0.1",
    "data_version": "0.0.3",
    "survey_id": "001",
    "title": "Test Routing Checkbox Count",
    "theme": "default",
    "description": "A test survey for routing based on checkbox count",
    "metadata": [
        {
            "name": "user_id",
            "type": "string"
        },
        {
            "name": "period_id",
            "type": "string"
        },
        {
            "name": "ru_name",
            "type": "string"
        }
    ],
    "questionnaire_flow": {
        "type": "Linear",
        "options": {
            "summary": {
                "collapsible": false
            }
        }
    },
    "sections": [
        {
            "id": "default-section",
            "groups": [
                {
                    "blocks": [
                        {
                            "type": "Question",
                            "id": "topping-checkbox",
                            "question": {
                                "answers": [
                                    {
                                        "id": "topping-checkbox-answer",
                                        "mandatory": false,
                                        "instruction": "Please select 2",
                                        "options": [
                                            {
                                                "label": "Cheese",
                                                "value": "Cheese"
                                            },
                                            {
                                                "label": "Ham",
                                                "value": "Ham"
                                            },
                                            {
                                                "label": "Pineapple",
                                                "value": "Pineapple"
                                            },
                                            {
                                                "label": "Tuna",
                                                "value": "Tuna"
                                            },
                                            {
                                                "label": "Pepperoni",
                                                "value": "Pepperoni"
                                            }
                                        ],
                                        "type": "Checkbox"
                                    }
                                ],
                                "id": "topping-checkbox-question",
                                "title": "What extra toppings would you like?",
                                "type": "General"
                            },
                            "routing_rules": [
                                {
                                    "block": "correct-answer",
                                    "when": {
                                        "==": [
                                            {
                                                "count": [
                                                    {
                                                        "source": "answers",
                                                        "identifier": "topping-checkbox-answer"
                                                    }
                                                ]
                                            },
                                            2
                                        ]
                                    }
                                },
                                {
                                    "block": "incorrect-answer"
                                }
                            ]
                        },
                        {
                            "type": "Interstitial",
                            "id": "incorrect-answer",
                            "content": {
                                "title": "You did not select 2 toppings",
                                "contents": [
                                    {
                                        "description": {
                                            "text": "You were asked to select <em>2</em> toppings but you actually selected <em>{answer}</em>.",
                                            "placeholders": [
                                                {
                                                    "placeholder": "answer",
                                                    "transforms": [
                                                        {
                                                            "transform": "format_list",
                                                            "arguments": {
                                                                "list_to_format": {
                                                                    "source": "answers",
                                                                    "identifier": "topping-checkbox-answer"
                                                                }
                                                            }
                                                        }
                                                    ]
                                                }
                                            ]
                                        }
                                    }
                                ]
                            },
                            "routing_rules": [
                                {
                                    "section": "End"
                                }
                            ]
                        },
                        {
                            "type": "Interstitial",
                            "id": "correct-answer",
                            "content": {
                                "title": "Correct",
                                "contents": [
                                    {
                                        "description": {
                                            "text": "You were asked to select <em>2</em> toppings and you selected <em>{answer}</em>.",
                                            "placeholders": [
                                                {
                                                    "placeholder": "answer",
                                                    "value": {
                                                        "source": "answers",
                                                        "identifier": "topping-checkbox-answer"
                                                    }
                                                }
                                            ]
                                        }
                                    }
                                ]
                            }
                        }
                    ],
                    "id": "checkboxes"
                }
            ]
        }
    ]
}
