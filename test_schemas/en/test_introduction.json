                                            {
                                                "placeholder": "company_name",
                                                "transforms": [
                                                    {
                                                        "transform": "first_non_empty_item",
                                                        "arguments": {
                                                            "items": [
                                                                {
                                                                    "source": "metadata",
                                                                    "identifier": "trad_as"
