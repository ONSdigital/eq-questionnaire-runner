                                "title": "Total food expenditure",
                                "operation": {
                                    "+": [
                                        {
                                            "source": "answers",
                                            "identifier": "q1-a1"
                                        },
                                        {
                                            "source": "answers",
                                            "identifier": "q1-a2"
                                        },
                                        {
                                            "source": "answers",
                                            "identifier": "q2-a1"
