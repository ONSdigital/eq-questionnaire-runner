                            "question": {
                                "id": "question-number-of-employees-working-at-this-additional-site",
                                "title": "On 20th of June 2019, what was the number of full-time and part-time employees that your business paid from its payroll, for this site?",
                                "guidance": {
                                    "contents": [
                                        {
                                            "description": "<strong>Include:</strong>"
                                        },
                                        {
                                            "list": [
                                                "full-time, over 30 hours a week, and part-time, 30 hours or less, employees aged 16 years and over. This includes individuals <strong>working from home</strong> and those temporarily absent but still employed, for example those on parental leave or sick leave",
                                                "agency workers paid direct from the agency payroll",
                                                "North Sea oil workers and any other employees working on the UK Continental Shelf (UKCS). The UKCS is the region of waters surrounding the United Kingdom in which the country claims mineral rights",
                                                "home or field workers whose work was organised from this site"
                                            ]
                                        },
                                        {
                                            "description": "<strong>Exclude:</strong>"
                                        },
                                        {
                                            "list": [
                                                "directors and working owners <strong>not</strong> paid via PAYE",
                                                "voluntary employees",
                                                "former employees only receiving a pension"
                                            ]
                                        }
                                    ]
                                },
                                "definitions": [
                                    {
                                        "title": "What we mean by &#39;employees&#39;",
                                        "contents": [
                                            {
                                                "description": "An employee is anyone aged 16 years or over who was working directly for the business.&#xA0;They may have been paid direct from the business, from elsewhere within the wider group, or by an external payroll provider on behalf of the company.&#xA0;If your business uses a central payroll to pay employees who work within the wider group, only include employees who worked directly for the business."
                                            }
                                        ]
                                    }
                                ],
                                "type": "General",
