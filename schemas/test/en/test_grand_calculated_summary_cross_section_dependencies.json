                                "operation": {
                                    "+": [
                                        {
                                            "source": "calculated_summary",
                                            "identifier": "currency-section-1"
                                        },
                                        {
                                            "source": "calculated_summary",
                                            "identifier": "currency-question-3"
                                        }
                                    ]
                                },
                                "title": "Grand total of calculated summaries"
