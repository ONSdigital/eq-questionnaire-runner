                                    {
                                        "type": "Radio",
                                        "id": "skip-answer-2",
                                        "mandatory": false,
                                        "options": [
                                            {
                                                "label": "Yes",
                                                "value": "Yes"
                                            },
                                            {
                                                "label": "No",
                                                "value": "No"
                                            }
                                        ]
                                    }
                                ]
                            }
                        },
                        {
                            "skip_conditions": {
                                "when": {
                                    "==": [
                                        {
                                            "identifier": "skip-answer-2",
                                            "source": "answers"
